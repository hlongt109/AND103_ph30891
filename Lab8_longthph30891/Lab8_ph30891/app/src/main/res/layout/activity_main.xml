<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#fff"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/edSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableLeft="@drawable/ic_search"
        android:paddingHorizontal="10dp"
        android:hint="Tìm kiếm tên sản phẩm"
        android:background="@drawable/khung"/>
    <EditText
        android:id="@+id/edFilterPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edSearch"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/khung"
        android:paddingHorizontal="10dp"
        android:drawableLeft="@drawable/ic_money"
        android:hint="Giá lớn hơn hoặc bằng"/>
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edFilterPrice"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent">
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spnFilter"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btnFilter"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="LỌC"
            app:cornerRadius="7dp"
            android:backgroundTint="#3F51B5"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/btnOrderr"
            android:layout_marginEnd="10dp"
            android:id="@+id/btnFilter"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="ORDER"
            app:cornerRadius="7dp"
            android:backgroundTint="#3F51B5"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnOrderr"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#fff"
        android:layout_marginTop="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcvProduct"/>
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:id="@+id/progressBar"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_photo"
            android:layout_gravity="center"
            app:tint="#3F51B5"
            android:id="@+id/imvEmpty"/>
    </FrameLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:src="@drawable/ic_add"
        app:tint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/tron"
        />

</androidx.constraintlayout.widget.ConstraintLayout>